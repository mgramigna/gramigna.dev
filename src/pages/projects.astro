---
import ExternalLinkIcon from "../components/ExternalLinkIcon.astro";
import Link from "../components/Link.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const projects = [
  {
    title: "Reality Survivor League",
    description:
      "Website for running and competing in survivor leagues for the best reality shows on television",
    link: "https://realitysurvivorleague.com/",
  },
  {
    title: "FilmRover",
    description: "Test your movie knowlegs, Wikipedia-game style!",
    link: "https://filmrover.gramigna.dev/",
  },
];
---

<BaseLayout title={`${SITE_TITLE} | Projects`} description={SITE_DESCRIPTION}>
  <div class="pt-8 mb-12 flex flex-wrap justify-center gap-8">
    <Link href="/">Home</Link>
    <Link href="https://github.com/mgramigna" target="_blank">GitHub</Link>
    <Link href="projects">Projects</Link>
    <Link href="blog">Blog</Link>
    <Link target="_blank" href="https://linkedin.com/in/mgramigna"
      >LinkedIn</Link
    >
  </div>
  <h1 class="text-center mt-12 text-4xl">Projects</h1>
  <div class="flex flex-col gap-12 mt-8">
    {
      projects.map(({ title, description, link }) => (
        <Link class="no-underline" href={link} target="_blank">
          <h3 class="text-2xl flex items-center gap-2">
            {title} <ExternalLinkIcon class="inline" />
          </h3>
          <p class="text-gray-500 dark:text-gray-400">{description}</p>
        </Link>
      ))
    }
  </div>
</BaseLayout>
